<div class="action-link pull-right">
  <%= link_to "Create Question" , new_admin_question_path, class: 'btn btn-primary' %>
</div>
<div class="action-link pull-right">
  <%= link_to "Create Answer", new_admin_answer_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Point</th>
      <th colspan="2" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
  <% Question.all.each.with_index(1) do |q, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= q.question %></td>
      <td><%= Answer.all %></td>
      <td></td>
      <td>
        <%= link_to "Edit", edit_admin_question_path(q.id), class: "btn btn-success" %>
      </td>
      <td>
        <%= link_to "Delete", admin_question_path(q.id), 
            method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
