<h1 class="page-header">Question Management</h1>
<div class="action-link pull-right">
  <%= link_to "Create Question" , new_admin_question_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <colgroup>
    <col style="width: 5%">
    <col>
    <col>
    <col>
  </colgroup>
  <thead>
    <tr>
      <th>No</th>
      <th>Question</th>
      <th>Order</th>
      <th>Group</th>
      <th colspan="4" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @questions.each.with_index(1) do |q, index| %>
    <tr>
      <td><%= index %></td>
      <td><%= q.name %></td>
      <td><%= q.display_order %></td>
      <td><%= q.question_group.name %></td>
      <td><%= render_question_move_up_btn(q) %></td>
      <td><%= render_question_move_down_btn(q) %></td>
      <td><%= link_to "Edit", edit_admin_question_path(q), class: "btn btn-success" %></td>
      <td><%= link_to "Delete", admin_question_path(q), method: :delete, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
