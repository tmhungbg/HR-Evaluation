<h1 class="page-header">Period Progress</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Peer Selection</th>
      <th>Comment</th>
      <th>Self Evaluation</th>
      <th>Peer Evaluation</th>
      <th>Supervisor Evaluation</th>
      <th>Manager Evaluation</th>
    </tr>
  </thead>
  <tbody>
  <% @staffs.each do |staff| %>
    <tr>
      <td><%= staff.name %></td>
      <td><%= staff.get_current_reviwer_name %></td>
      <th><%= staff.current_peer_selection.try(:reason) %></th>
      <td><%= staff.get_current_self_evaluation_status %></td>
      <td><%= staff.get_current_peer_evaluation_status %></td>
      <td><%= staff.get_current_supervisor_evaluation_status %></td>
      <td><%= staff.get_current_manager_evaluation_status %></td>
    </tr>
  <% end %>
  </tbody>
</table>