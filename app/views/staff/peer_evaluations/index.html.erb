<h2>Peer Evaluation</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Evaluation</th>
    </tr>
  </thead>
  <tbody>
    <% @peer_evaluations.each do |pe| %>
      <tr>
        <td><%= pe.peer_selection.staff.name %></td>
        <td><%= pe.status %></td>
        <td><%= link_to 'Review', edit_staff_peer_evaluation_path(pe), class: 'btn btn-primary' %></td>
      </tr>
    <% end %> 
  </tbody>
</table>