<section>
  <h3>Choose one answer for one question(1 correspond to the lowest point, respectively 5 highest point)</h3>
  <%= simple_form_for [:staff, @self_evaluation] do |f| %>
    <%= f.input :score, collection: 1..5 %>
    <%= f.input :score, as: :boolean, checked_value: true, unchecked_value: false %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</section>